%% PAGE SETUP
\mode<presentation>{ % page setup for slides in beamer
	% FYI slide size = 128mm by 96mm
	\setbeamertemplate{navigation symbols}{}  % switch navigation off
	\setbeamercolor{normal text}{fg=black!70}
	\setbeamertemplate{blocks}[rounded][shadow=true]
	\setbeamerfont{frametitle}{size=\normalsize} % size of title
	\addtobeamertemplate{frametitle}{}{\vspace{0mm}} % decrease space between title and text
	\setbeamersize{text margin left=10mm,text margin right=5mm} 
	\setbeamertemplate{footline}[frame number] % show frame number
	\setbeamertemplate{caption}[numbered] % number the figures
	\setbeamertemplate{section in toc}[square]
	\setlength{\leftmargini}{1cm} % was 0pt, changes the left margin in itemize
	\setlength{\mathindent}{3mm} % indent math equations
	%\let\Tiny=\tiny %to avoid font size warnings
	\usetheme{default}      % or try Darmstadt, Madrid, Warsaw, Copenhagen, Boadilla, Antibes
	\usecolortheme{default} % or try albatross, beaver, crane, ...
	\usefonttheme{default}  % or try serif, structurebold, ...
	
	% only for beamer?
	\usepackage{sansmathaccent} %https://tex.stackexchange.com/questions/133781/font-display-error-in-windows
	\pdfmapfile{+sansmathaccent.map}
} 

\mode<article>{ % page setup for report in memoir
	% A4 width  = 21 cm - 3.5 cm  - 3 cm =  14.5 cm textwidth
	\setlrmarginsandblock{3.5cm}{3cm}{*} % to set left and right margin in class memoir
	\setulmarginsandblock{3cm}{3cm}{*} % to set up and low margin in class memoir
	\checkandfixthelayout % required! to process margin settings in class memoir
	\chapterstyle{lyhne} % or try southall
	\renewcommand*{\cftchapterfont}{\normalfont}
	\renewcommand*{\cftchapterpagefont}{\normalfont}
	%\pagestyle{simple} %\pagestyle{ruled} %\pagestyle{companion}
	%\openright % useful for recto verso
	\linespread{1.1} % line spacing
	\setlength{\parindent}{0em} % indentation of first line of new par
	\setlength{\parskip}{1.2ex plus 0.5ex minus 0.2ex} % space between pars
	\setlength{\mathindent}{4ex} % indent math equations, ex = height letter x
	\def\labelitemi{--} % replace bullets with dash in itemize, % problems with beamer? maybe in memoir?
	\def\labelsubitemi{-} % replace bullets with dash in itemize, % problems with beamer? maybe in memoir?
	\settocdepth{subsubsection} % depth toc numbers
	\setsecnumdepth{subsubsection} % level section numbers
	\setsecheadstyle{\large\scshape\raggedright\color{VUBorange}} % define the style of the section header
	\setsubsecheadstyle{\scshape\raggedright\color{VUBorange}} % define the style of the subsection header
	\setsubsubsecheadstyle{\raggedright\color{VUBorange}} % define the style of the subsubsection header
	\captionnamefont{\small\bfseries} % fig. & table small and bold
	\captiontitlefont{\small} % make caption small
	\nouppercaseheads %
	\usepackage{enumitem} % problems with beamer? maybe in memoir?
	\setbeamertemplate{frametitle}{}% removes frametitles in article mode
} 








